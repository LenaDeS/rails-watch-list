<h1>List Details</h1>
<p> <%= @list.name %></p>
<%= @list.photo.attached? ? cl_image_tag(@list.photo.key) : image_tag('https://images.unsplash.com/photo-1527224857830-43a7acc85260?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1742&q=80') %>
  <p> <% @bookmarks.each do |bookmark| %>
      <%= bookmark.comment %>
      <%= link_to "Delete",
        bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
      <% end %>
  </p>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"  %>
<%# back to the lists %>
<%= link_to "Back to lists", root_path, class: "btn btn-primary" %>
